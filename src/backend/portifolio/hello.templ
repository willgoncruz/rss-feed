package portifolio

css background() {
}

css title() {
	width: 100%;
	line-height: 90vh;
	text-align: center;
}

templ hello(name string) {
	<style type="text/css">
		body {
			color: #EFF7FF;
			font-family: sans-serif;
			background-color: #0D1821;

			margin: 0;
			padding: 0;
		}
	</style>
	<div class={background()}>
		<h1 class={title()}>Hello, { name }</h1>
	</div>
}